{
  "compilerOptions": {
    "target": "es5",
    "module": "Node16",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "paths": {
      "@zkpassport-sdk/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
